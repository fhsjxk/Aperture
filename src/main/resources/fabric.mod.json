{
  "schemaVersion": 1,
  "id": "radiance",
  "version": "${version}",
  "name": "Radiance",
  "description": "A Minecraft mod that uses modern Vulkan C++ as backend renderer.",
  "authors": [
    "LJIONG",
    "Interstellarss"
  ],
  "contact": {
    "homepage": "https://www.minecraft-radiance.com/",
    "sources": "https://github.com/Minecraft-Radiance/Radiance",
    "issues": "https://github.com/Minecraft-Radiance/Radiance/issues"
  },
  "license": "GPL-3.0",
  "icon": "assets/radiance/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.radiance.client.RadianceClient"
    ],
    "main": [
      "com.radiance.Radiance"
    ]
  },
  "mixins": [
    "radiance.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "accessWidener": "radiance.accesswidener"
}
